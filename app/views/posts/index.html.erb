<div class="py-10">
  <div class="max-w-7xl mx-auto sm:px-6 lg:px-8">
    <%= link_to "New Post", new_post_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    <h1 class="text-3xl font-bold mb-4">Posts</h1>
    <% @posts.each do |post| %>
      <div class="bg-white overflow-hidden shadow-sm sm:rounded-lg mb-4">
        <div class="p-6 bg-white border-b border-gray-200">
          <h2 class="text-xl font-medium mb-2"><%= link_to post.title, post_path(post) %></h2>
          <p class="text-gray-600 text-sm"><%= truncate(post.content, length: 100) %></p>
          <p class="text-gray-500 text-xs mt-2">
            <%= time_ago_in_words(post.created_at) %> ago | <%= link_to "Edit", edit_post_path(post), class: "text-blue-500 hover:text-blue-700" %> | <%= link_to "Delete", post_path(post), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500 hover:text-red-700" %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
  <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
</div>

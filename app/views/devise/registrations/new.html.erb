<section class="max-w-4xl p-6 mx-auto bg-white rounded-md shadow-md">
  <h2 class="text-lg font-semibold text-gray-700 capitalize">Account settings</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="grid grid-cols-1 gap-6 mt-4 sm:grid-cols-2">
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :name, "Name", class: "text-gray-700" %>
        <%= f.text_field :name, class: "block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring" %>
      </div>

      <div>
        <%= f.label :email, "Email Address", class: "text-gray-700" %>
        <%= f.email_field :email, class: "block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring" %>
      </div>

      <div>
        <%= f.label :password, "Password", class: "text-gray-700" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, class: "block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring" %>
      </div>

      <div>
        <%= f.label :password_confirmation, "Password Confirmation", class: "text-gray-700" %>
        <%= f.password_field :password_confirmation, class: "block w-full px-4 py-2 mt-2 text-gray-700 bg-white border border-gray-200 rounded-md focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring" %>
      </div>
    </div>

    <div class="flex justify-end mt-6 actions">
        <%= f.submit "Sign up", class: "px-8 py-2.5 leading-5 text-white transition-colors duration-300 transform bg-gray-700 rounded-md hover:bg-gray-600 focus:outline-none focus:bg-gray-600" %>
    </div>
  <% end %>
</section>
